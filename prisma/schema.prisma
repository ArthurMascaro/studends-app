// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

model User {
  cpf String @id()
  name    String
  motherName String
  phones Phone[]
  bornDate DateTime
  grade String
  observation String?
  lectures Lecture[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("users")
}

model Phone {
  id String @id @default(uuid())
  number String
  user_cpf String
  user User @relation(fields: [user_cpf], references: [cpf])

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("phones")
}

model Lesson {
  id String @id @default(uuid())
  startAt DateTime
  endAt DateTime
  value Float
  lectures Lecture[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("lessons")
}

model Lecture {
  id String @id @default(uuid())
  user_cpf String
  lesson_id String
  payed Boolean @default(false)
  presence Boolean @default(false)

  user User @relation(fields: [user_cpf], references: [cpf])
  lesson Lesson @relation(fields: [lesson_id], references: [id])

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("lectures")
}



